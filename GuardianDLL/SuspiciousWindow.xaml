<Window x:Class="GuardianDLL.SuspiciousWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suspicious DLLs" Height="400" Width="600"
        Background="#2b2b2b">
    <Grid Margin="10">
        <ListBox x:Name="SuspiciousList"
                 FontFamily="Consolas"
                 FontSize="14"
                 Background="#1e1e1e"
                 Foreground="OrangeRed"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
