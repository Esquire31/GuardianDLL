<UserControl x:Class="GuardianDLL.pages.SuspiciousDllView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Scan Button Style -->
        <Style x:Key="ScanButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                         Text="&#xE8B3;"
                                         FontSize="16"
                                         Margin="0,0,8,0"
                                         VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106ebe"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#404040"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#0078d4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <Grid>
                                <Border Name="PART_Track" CornerRadius="4"/>
                                <Border Name="PART_Indicator" 
                                       Background="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Left"
                                       CornerRadius="4"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Badge Styles -->
        <Style x:Key="CleanBadge" TargetType="Border">
            <Setter Property="Background" Value="#dcfce7"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="SuspiciousBadge" TargetType="Border">
            <Setter Property="Background" Value="#fef3c7"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="MaliciousBadge" TargetType="Border">
            <Setter Property="Background" Value="#fecaca"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- Result Item Style -->
        <Style x:Key="ResultItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Suspicious DLL Scanner" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,0,0,24"/>

            <!-- Main Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <!-- Card Header -->
                    <TextBlock Text="DLL File Scanner" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White" 
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Scan all DLL files in your system for potential threats and suspicious activities." 
                               FontSize="14" 
                               Foreground="#B0B0B0" 
                               Margin="0,0,0,24"/>

                    <!-- Scan Button -->
                    <Button Name="ScanButton"
                            Content="Start DLL Scan" 
                            Style="{StaticResource ScanButtonStyle}"
                            Click="ScanButton_Click"
                            Margin="0,0,0,16"/>

                    <!-- Progress Section -->
                    <StackPanel Name="ProgressSection" Visibility="Collapsed" Margin="0,0,0,16">
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Scanning DLL files..." 
                                       FontSize="14" 
                                       Foreground="White" 
                                       HorizontalAlignment="Left"/>
                            <TextBlock Name="ProgressText" 
                                       Text="0%" 
                                       FontSize="14" 
                                       Foreground="White" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        <ProgressBar Name="ScanProgress" 
                                     Style="{StaticResource ModernProgressBar}"
                                     Minimum="0" 
                                     Maximum="100" 
                                     Value="0"/>
                    </StackPanel>

                    <!-- Results Section -->
                    <StackPanel Name="ResultsSection" Visibility="Collapsed">
                        <!-- Results Header -->
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Scan Results" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Left"/>
                            <Border Background="#404040" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    HorizontalAlignment="Right">
                                <TextBlock Name="ResultsCount" 
                                           Text="0 files scanned" 
                                           FontSize="12" 
                                           Foreground="White"/>
                            </Border>
                        </Grid>

                        <!-- Results List -->
                        <ScrollViewer Name="ResultsScrollViewer" 
                                      Height="400" 
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl Name="ResultsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ResultItemStyle}">
                                            <StackPanel>
                                                <!-- File Info Row -->
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <!-- Status Icon -->
                                                    <TextBlock Name="StatusIcon"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"/>

                                                    <!-- File Path -->
                                                    <TextBlock Text="{Binding File}" 
                                                               FontWeight="Medium" 
                                                               Foreground="White" 
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,12,0"/>

                                                    <!-- Status Badge -->
                                                    <Border Name="StatusBadge">
                                                        <TextBlock Name="StatusText" 
                                                                   FontSize="12" 
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                </StackPanel>

                                                <!-- Details Row -->
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="12" 
                                                               Foreground="#B0B0B0" 
                                                               Margin="0,0,16,0">
                                                        <Run Text="Size: "/>
                                                        <Run Text="{Binding Size}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" 
                                                               Foreground="#B0B0B0">
                                                        <Run Text="Threat: "/>
                                                        <Run Text="{Binding Threat}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>