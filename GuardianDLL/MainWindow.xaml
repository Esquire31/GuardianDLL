

<Window x:Class="GuardianDLL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GuardianDLL"
        Title="GuardianDLL Monitor" Height="600" Width="1000"
        Background="#1e1e1e">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15 10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="10 0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar width -->
            <ColumnDefinition Width="*"/>
            <!-- Content area -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#252526" Grid.Column="0">
            <TextBlock Text="Security Monitor"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="20"/>
            <Button Content="Home"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="HomeButton_Click"/>
            <Button Content="All Logs"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="AllLogsButton_Click"/>
            <Button Content="Suspicious DLLs"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="SuspiciousDllsButton_Click"/>
            <Button Content="Suspicious Activities"
                    Style="{StaticResource SidebarButtonStyle}"
                    Click="SuspiciousActivitiesButton_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <ContentControl x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>
