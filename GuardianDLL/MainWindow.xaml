
<Window x:Class="GuardianDLL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GuardianDLL"
        Title="GuardianDLL Monitor" Height="700" Width="1200"
        Background="#1e1e1e"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Professional Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" 
                                      Margin="16,0"
                                      VerticalAlignment="Center">
                                <TextBlock Name="iconText"
                                         FontFamily="Segoe MDL2 Assets"
                                         Text="{TemplateBinding Tag}"  
                                         Foreground="{TemplateBinding Foreground}"
                                         FontSize="16"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"/>
                                <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a3c"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Button Style -->
        <Style x:Key="ActiveSidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Separator Style -->
        <Style x:Key="SeparatorStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#404040"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="16,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="0" 
                Background="#252526"
                BorderBrush="#333333"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackPanel Grid.Row="0" Margin="0,24,0,16">
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,8">
                        <TextBlock  Text="🛡️"
                                 FontSize="28"
                                 VerticalAlignment="Center"
                                 Margin="0,0,2,0"/>
                        <TextBlock Text="Guardian" 
                                   Margin="0,4,0,0"
                                 Style="{StaticResource HeaderTextStyle}"/>
                    </StackPanel>
                    <TextBlock Text="Security Monitor" 
                             FontFamily="Segoe UI"
                             FontSize="12"
                             Foreground="#B0B0B0"
                             HorizontalAlignment="Center"
                             FontWeight="Light"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Row="1" Margin="0,16,0,0">
                    <TextBlock Text="NAVIGATION" 
                             FontSize="11"
                             FontWeight="SemiBold"
                             Foreground="#808080"
                             Margin="24,0,0,12"
                             FontFamily="Segoe UI"/>

                    <Button Name="DashboardButton"
            Content="Dashboard"
            Tag="&#xE80F;" 
            Style="{StaticResource ActiveSidebarButtonStyle}"
            Click="HomeButton_Click"/>

                    <Button Name="AllLogsButton"
        Content="All Logs"
        Tag="&#xE7C3;"  
        Style="{StaticResource SidebarButtonStyle}"
        Click="AllLogsButton_Click"/>

                    <Button Name="SuspiciousDllsButton"
        Content="Suspicious DLLs"
        Tag="&#xE9D9;" 
        Style="{StaticResource SidebarButtonStyle}"
        Click="SuspiciousDllsButton_Click"/>

                    <Button Name="ThreatActivitiesButton"
        Content="Threat Activities"
        Tag="&#xE730;"  
        Style="{StaticResource SidebarButtonStyle}"
        Click="SuspiciousActivitiesButton_Click"/>




                </StackPanel>



            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#1e1e1e">
            <!-- Title Bar -->
            <Border Height="48" 
                    VerticalAlignment="Top"
                    Background="#2d2d30"
                    BorderBrush="#333333"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="Dashboard Overview" 
                             FontFamily="Segoe UI"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="White"
                             VerticalAlignment="Center"
                             Margin="24,0"/>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,8,0">
                        <!-- Minimize Button -->
                        <Button Content="&#xE921;" 
            FontFamily="Segoe MDL2 Assets"
            Width="46" Height="32"
            Background="Transparent"
            Foreground="White"
            BorderThickness="0"
            Click="MinimizeButton_Click"/>

                        <!-- Maximize / Restore Button -->
                        <Button Content="&#xE922;" 
            FontFamily="Segoe MDL2 Assets"
            Width="46" Height="32"
            Background="Transparent"
            Foreground="White"
            BorderThickness="0"
            Click="MaximizeRestoreButton_Click"/>

                        <!-- Close Button -->
                        <Button Content="&#xE8BB;" 
            FontFamily="Segoe MDL2 Assets"
            Width="46" Height="32"
            Background="Transparent"
            Foreground="White"
            BorderThickness="0"
            Click="CloseButton_Click"/>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Content Area -->
            <ContentControl x:Name="MainContent" 
                          Margin="0,48,0,0"
                          Background="#1e1e1e"/>
        </Grid>
    </Grid>
</Window>